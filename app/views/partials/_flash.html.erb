<% flash.each do |type, message| %>
  <div class="flex justify-center">
    <div class="alert alert-<%= type %> alert-dismissible" data-controller="flash">
      <%= message %>
      <button class="close-button" data-action="click->flash#close" aria-label="Close">
        <%= image_tag "x_mark.svg" %>
      </button>
    </div>
  </div>
<% end %>

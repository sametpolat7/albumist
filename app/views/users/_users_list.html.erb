<turbo-frame id="users_list">
  <div class="users">
    <% if users.empty? %>
      <div class="users__results">User not found</div>
    <% else %>
      <div class="users__results">
        <%= users.length == User.count ? "All Users" : "#{pluralize(users.length, 'user')} found" %>
      </div>
    <% end %>
    <ul class="users__list">
      <% users.each do |user| %>
        <li class="users__list__item">
          <a href="<%= user_path(user) %>" data-turbo-frame="_top" data-turbo-visit-control="reload" >
            <div class="flex items-center ">
              <span>
                <%= image_tag("https://picsum.photos/id/#{user.id}/50/50") %>
              </span>
              <span class="ml-1">
                <%= user.name %>
                <br>
                @
                <%= user.username %>
              </span>
            </div>
            <div class="">
              <%= image_tag "edit.svg", alt: "Edit Button" %>
            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</turbo-frame>
